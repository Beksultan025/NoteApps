<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/constraint_layout"
        android:background="@color/white"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_logo_notification"
            android:src="@drawable/img_logo"
            android:layout_width="85dp"
            android:layout_height="85dp" />

        <TextView
            android:id="@+id/tv_title_notification"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            tools:text="Title"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_toRightOf="@id/img_logo_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_message_notification"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            tools:text="Title"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            android:layout_below="@id/tv_title_notification"
            android:layout_toRightOf="@id/img_logo_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>